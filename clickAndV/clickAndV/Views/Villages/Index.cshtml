@model IEnumerable<clickAndV.Models.Village>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VillageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VillageDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VillageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VillageDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departement.DepartementId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VillageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VillageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VillageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
