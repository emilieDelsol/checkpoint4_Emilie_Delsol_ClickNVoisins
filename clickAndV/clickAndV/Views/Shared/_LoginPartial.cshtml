@using Microsoft.AspNetCore.Identity
@using clickAndV.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav d-flex flex-row">
    @if (SignInManager.IsSignedIn(User))
    {
       
        <li class="dropdown p-3">
            <a class="nav-link text-light dropdown-toggle"  id="dropDownUser" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span>Hello @UserManager.GetUserName(User)!</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropDownUser" style=" background-color: #222;" >
                <a class="dropdown-item text-light " asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                <a id="manage" class="dropdown-item text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Settings</a>
            </div>
        </li>
        <li class="nav-item p-3">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item p-3">
            <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item p-3">
            <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
