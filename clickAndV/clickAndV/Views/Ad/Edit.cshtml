@{
}

<div class="container">
  <form asp-controller="Ad" asp-action="PostEdit">
    <div class="form-group">
      <label for="title">Titre</label>
      <input type="text" class="form-control" name="title" id="title" value="@Model.Title">
    </div>

    <div class="form-group">
      <label for="text">Texte</label>
      <textarea class="form-control" name="text" id="text">@Model.Text</textarea>
    </div>

    <div class="form-group">
      <label for="picture">Photo</label>
      <input type="file" name="picture" id="picture" />
    </div>

    <input type="hidden" name="adId" value="@Model.AdId"/>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>