@model Village

@{
    ViewData["Title"] = "AccueilVillage";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ICollection<Category> categories = Model.Categories;
}
<header>
    @await Html.PartialAsync("_HeaderPartial")
    @await Html.PartialAsync("_MenuPartial",Model.VillageId)
</header>


<main role="main" class="p-0 container-fluid">
    <div style=" height:100vh; width:100%; background-image:url(@Model.Banner) ; background-size:cover; opacity:0.7">
    </div>
    <div class="m-3 m-lg-0" style="position:absolute; top: 30%">
        <div class=" col-12 col-lg-6 m-auto p-3 " style="background-color:rgba(255,255,255,0.5) ; font-weight:bold; border-radius:1em">
            <h1 class="text-center ">@Model.VillageName</h1>
            <p class="text-center" >@Model.VillageDescription</p>
        </div>
    </div>
</main>